{% block metatags %}
	<!-- Metadata -->
	<meta name="language" content="pt-br">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta charset="utf-8">
	<meta name="contact" content="ac@ap-o.com">
	<meta name="author" content="Apostolos Christodoulou">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="{{ description }}">
	<meta name="keywords" content="{{ keywords }}">
	<meta name="robots" content="index, follow">

	<!-- Metadata - Facebook / Open Graph -->
	<meta property="fb:app_id" content="">
	<meta property="og:title" content="{{ title }}">
	<meta property="og:description" content="{{ description }}">
	<meta property="og:site_name" content="{{ title }}">
	<meta property="og:type" content="website">
	<meta property="og:url" content="{{ appUrl }}/{{ page }}">
	<meta property="og:image" content="{{ staticUrl }}images/logo.png">

	<!-- Metadata - Twitter / Open Graph -->
	<meta name="twitter:card" content="summary_large_image">
	<meta name="twitter:site" content="@project">
	<meta name="twitter:title" content="{{ title }}">
	<meta name="twitter:description" content="{{ description }}">

	<!-- Metadata - Google+ / Schema.org -->
	<meta itemprop="name" content="{{ title }}">
	<meta itemprop="description" content="{{ description }}">

	<link rel="shortcut icon"  type="image/png" href="{{ staticUrl }}images/favicon.png">
	<link rel="icon" type="image/png" sizes="32x32"  href="{{ staticUrl }}images/favicon-32.png">

{% endblock %}
